		<!--#region Button Border Menu StoryBoards-->

		<!--*** Slide complete Canvas Right almost out of view***-->
		<Storyboard x:Key="SlideStackPanelRight">
			<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="RectbuttonStackPanel">
				<EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="175"/>
			</DoubleAnimationUsingKeyFrames>
			<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="RectbuttonStackPanel">
				<EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="445"/>
			</DoubleAnimationUsingKeyFrames>
		</Storyboard>

		<!--*** Slide complete Canvas Left into View***-->

		<Storyboard x:Key="SlideStackPanelLeft">
			<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="RectbuttonStackPanel">
				<EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0"/>
			</DoubleAnimationUsingKeyFrames>
			<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="RectbuttonStackPanel">
				<EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="5"/>
			</DoubleAnimationUsingKeyFrames>
		</Storyboard>
		<!--#endregion-->

		<Storyboard x:Key="ShowLeftMenu">
			<DoubleAnimation Duration="0:0:0.30" From="0" To="145" Storyboard.TargetName="SlideOutMenu" Storyboard.TargetProperty="Width" 
					     FillBehavior="HoldEnd"/>
		</Storyboard>
		<Storyboard x:Key="HideLeftMenu">
			<DoubleAnimation Duration="0:0:0.20" From="145" To="0" Storyboard.TargetName="SlideOutMenu" Storyboard.TargetProperty="Width" FillBehavior="HoldEnd"/>
		</Storyboard>

		<Storyboard x:Key="FadeInMenu">
			<DoubleAnimation Duration="0:0:0.30" From="0.0" To="1.0" Storyboard.TargetName="LeftMenuTogglePanel" Storyboard.TargetProperty="Opacity" FillBehavior="HoldEnd"/>
			<!--<DoubleAnimation Duration="0:0:0.40" From="0.0" To="1.0" Storyboard.TargetName="Tb1" Storyboard.TargetProperty="Opacity" FillBehavior="HoldEnd"/>-->
		</Storyboard>
		<Storyboard x:Key="FadeOutMenu">
			<DoubleAnimation Duration="0:0:0.20" From="1.0" To="0.5" Storyboard.TargetName="LeftMenuTogglePanel" Storyboard.TargetProperty="Opacity" FillBehavior="HoldEnd"/>
			<!--<DoubleAnimation Duration="0:0:0.40" From="1.0" To="0.5" Storyboard.TargetName="Tb1" Storyboard.TargetProperty="Opacity" FillBehavior="HoldEnd"/>-->
		</Storyboard>


