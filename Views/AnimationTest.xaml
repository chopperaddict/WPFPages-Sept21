		<Style x:Key="BtnAsLabel" TargetType="{x:Type Button}">
			<Style.Resources>
				<DataTemplate x:Key="ButtonLabelTtemplate">
					<Grid>
						<Border
							Height="25"
							Width="120"
							BorderBrush="Black"
							BorderThickness="2"
							UseLayoutRounding="True"
							>

						</Border>
						<TextBlock
							Panel.ZIndex="1"
							FontSize="{Binding TextSize}" 
							FontStyle="{Binding FontDecoration}"
							Foreground="{Binding BtnTextColor}"
							Height="{Binding TextHeight}" 
							OverridesDefaultStyle="True"
							Width="{Binding TextWidth}" 
							VerticalAlignment="Center"
							HorizontalAlignment="Center"
							TextAlignment="Center"    
							TextWrapping="Wrap"
							Text="{Binding BtnText, ElementName=RectangularButton}"				
							>
							<TextBlock.Effect>
								<DropShadowEffect 
								ShadowDepth="{Binding TextShadowSize, ElementName=RectangularButton}"
								Direction="{Binding TextShadowDirection, ElementName=RectangularButton}"
								Color="{Binding ShadowColor, ElementName=RectangularButton}"
								Opacity="{Binding TextShadowOpacity, ElementName=RectangularButton}"
								BlurRadius="{Binding TextShadowRadius, ElementName=RectangularButton}"/>
							</TextBlock.Effect>

						</TextBlock>
					</Grid>
				</DataTemplate>
			</Style.Resources>

		</Style>

